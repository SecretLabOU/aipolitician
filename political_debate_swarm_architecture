digraph "Political Debate Swarm Architecture" {
	rankdir=TB splines=polyline
	Swarm [label="Swarm (Group Chat)" color=black fillcolor=gray92 shape=box style="rounded,filled"]
	UserQuery [label="User Query Input" color=black fillcolor=gray92 shape=box style="rounded,filled"]
	Agent1 [label="Agent 1 (Politician A)" color=black fillcolor=gray92 shape=box style="rounded,filled"]
	Agent2 [label="Agent 2 (Politician B)" color=black fillcolor=gray92 shape=box style="rounded,filled"]
	AgentN [label="Agent N (Politician N)" color=black fillcolor=gray92 shape=box style="rounded,filled"]
	Debate [label="Real-Time Debate" color=black fillcolor=gray92 shape=box style="rounded,filled"]
	Output [label="Evolving Debate Output" color=black fillcolor=gray92 shape=box style="rounded,filled"]
	UserQuery -> Swarm
	Swarm -> Agent1
	Swarm -> Agent2
	Swarm -> AgentN
	Agent1 -> Debate
	Agent2 -> Debate
	AgentN -> Debate
	Debate -> Output
}
