# API Keys
FEC_API_KEY=your_fec_api_key  # Optional: For campaign finance data

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Database Configuration
DATABASE_URL=sqlite:///data/main.db
CACHE_DATABASE_URL=sqlite:///data/cache.db

# Model Settings
DEVICE=cuda  # or cpu
MODEL_PRECISION=float16  # or float32
BATCH_SIZE=1
EMBEDDING_DIMENSION=768
MAX_CONTEXT_LENGTH=2048

# LangChain Settings
LANGCHAIN_VERBOSE=false
LANGCHAIN_CACHE=true

# Cache Settings
CACHE_EXPIRY_HOURS=24
RESPONSE_CACHE_SIZE=1000

# GPU Settings (if available)
CUDA_VISIBLE_DEVICES=0
GPU_MEMORY_FRACTION=0.9

# Monitoring
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# Development Settings
DEBUG=false
RELOAD=false
TESTING=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=app.log
