# API Keys
PROPUBLICA_API_KEY=your_propublica_api_key_here  # Get from https://www.propublica.org/datastore/api/propublica-congress-api
NEWS_API_KEY=your_news_api_key_here  # Get from https://newsapi.org/

# API Configuration
API_HOST=0.0.0.0
API_PORT=35000
API_WORKERS=1

# Database Configuration
DATABASE_URL=postgresql://politician_ai_user:your_password_here@your_gpu_ip:5432/politician_ai
CACHE_DATABASE_URL=postgresql://politician_ai_user:your_password_here@your_gpu_ip:5432/politician_ai_cache

# Model Settings
DEVICE=cuda  # or cpu
MODEL_PRECISION=float16  # or float32
BATCH_SIZE=1

# LangChain Settings
LANGCHAIN_VERBOSE=false
LANGCHAIN_CACHE=true

# Cache Settings
CACHE_EXPIRY_HOURS=24
RESPONSE_CACHE_SIZE=1000

# Vector Store Settings
EMBEDDING_DIMENSION=768
MAX_CONTEXT_LENGTH=2048

# GPU Settings
CUDA_VISIBLE_DEVICES=0
GPU_MEMORY_FRACTION=0.9

# Development Settings
DEBUG=false
RELOAD=false
TESTING=false

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log
